@model BlogsViewModel

<div class="col-lg-4">
    <div class="sidebar">
        <div class="row">
            <div class="col-lg-12">
                <div class="sidebar-item search">
                    <form asp-action="GetBlog" class="d-flex" method="get">
                        <input type="text" class="searchText" placeholder="Search" autocomplete="on" name="aranankelime">
                        <button type="submit" class="btn btn-outline-success">Arama</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="sidebar-item categories">
                    <div class="sidebar-heading">
                        <h2>Kategoriler</h2>
                    </div>
                    <div class="content">
                        <ul>
                            @foreach (var category in Model.CategoriesSelect)
                            {
                                <li><a asp-controller="home" asp-action="Allblog" asp-route-category="@category.Value">@category.Text</a></li>

                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="sidebar-item tags">
                    <div class="sidebar-heading">
                        <h2>Etiketler</h2>
                    </div>
                    <div class="content">
                        <ul>
                            @foreach (var item in Model.Blogs)
                            {
                                if (item.Tag!=null)
                                {
                                    <li><a asp-controller="home" asp-action="Allblog" asp-route-tag="@item.Tag.ToString()">@item.Tag</a></li>
                                    
                                }
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>