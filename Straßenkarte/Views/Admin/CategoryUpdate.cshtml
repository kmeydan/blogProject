@model NewCategoryViewModel

@{
	Layout = "_AdminLayout";
}
@Html.Partial("TotalPartial")


<div class="card col-12">
	<div class="card-body">
		<h4 class="card-title">Kategori Düzenle</h4>

		<form class="forms-sample" asp-controller="Admin" asp-action="CategoryUpdate" method="post">
			<div class="form-group">
				<input type="hidden" class="form-control" asp-for="Id">
				<label asp-for="CategoryName"></label>
				<input asp-for="CategoryName" class="form-control" placeholder="@Model.CategoryName">
			</div>
			<div class="d-flex justify-content-between">
				<div class="mt-2">
					<button type="submit" class="btn btn-primary">Kaydet</button>
					<button class="btn btn-light" asp-action="CategoryCreate">İptal</button>
					<button class="btn btn-danger mx-5" asp-action="CategoryDelete" method="post">Sil</button>

				</div>
				
			</div>
			
			

		</form>


	</div>
</div>