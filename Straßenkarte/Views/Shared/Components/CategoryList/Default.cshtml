@model CategoryModelComponent

<ul class="d-flex justify-content-center">
	@foreach (var item in Model.Categories)
	{
		var css= "list-group-item";
		if (Model.SelectValue==item.CategoryId)
		{
			css += " active";
		}
			<li class="@css "><a class="" asp-controller="home" asp-action="allblog" asp-route-category="@item.CategoryId">@item.CategoryName</a></li>
	}
</ul>
